<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFB506"
    tools:context=".HomeActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/mainbg2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:text="The Real Jigsaw"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/cameraMode"
        android:layout_width="96dp"
        android:layout_height="133dp"
        android:layout_margin="8dp"
        android:onClick="checkCameraPermission"
        android:text="World Mode"
        android:textColor="#08176C"
        app:backgroundTint="#EFB506"
        app:layout_constraintEnd_toStartOf="@+id/customMode"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="97dp" />

    <Button
        android:id="@+id/customMode"
        android:layout_width="111dp"
        android:layout_height="130dp"
        android:layout_margin="8dp"
        android:text="Custom Mode"
        android:textColor="#08176C"
        app:backgroundTint="#EFB506"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="100dp" />

    <Button
        android:id="@+id/special"
        android:layout_width="129dp"
        android:layout_height="121dp"
        android:layout_margin="8dp"
        android:text="Special Mode"
        android:textColor="#060F3E"
        app:backgroundTint="#EFB506"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/customMode"
        tools:layout_editor_absoluteY="97dp" />

    <Button
        android:id="@+id/lead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Leaderboard"
        android:textColor="#060F3E"
        app:backgroundTint="#EFB506"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="245dp" />

    <Button
        android:id="@+id/myScores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="My Scores"
        android:textColor="#060F3E"
        app:backgroundTint="#EFB506"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="302dp" />

    <Button
        android:id="@+id/logout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Logout"
        android:textColor="#060F3E"
        app:backgroundTint="#EFB506"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="379dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:paddingLeft="2dp"
        android:paddingTop="10dp"
        android:text="Make puzzle of live feed through the camera"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="444dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:text="Custom Puzzles in 3x3 mode"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="513dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:paddingLeft="2dp"
        android:text="A special mode containing different filters with camera"
        android:textColor="#FBF3F3"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="588dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="2dp"
        android:text="High scores of all users"
        android:textColor="#F4F0F0"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="657dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:paddingLeft="2dp"
        android:paddingTop="15dp"
        android:text="Your scores in all games"
        android:textColor="#F1E2E2"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="724dp" />

</androidx.constraintlayout.widget.ConstraintLayout>